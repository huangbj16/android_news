<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.java.HuangBingjian.mimaxapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:testOnly="false"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="HBJ_News"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.java.HuangBingjian.MainActivity"
            android:label="HBJ_News">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.java.HuangBingjian.NewsPageActivity"
            android:label="News">
        </activity>
        <activity android:name="com.java.HuangBingjian.ManageActivity"
            android:label="选择频道">
        </activity>
        <activity android:name="com.java.HuangBingjian.SearchActivity"
            android:label="搜索">
        </activity>
        <activity android:name="com.java.HuangBingjian.CollectionActivity"
            android:label="收藏">
        </activity>
        <activity android:name="com.java.HuangBingjian.RecommendActivity"
            android:label="推荐">
        </activity>
    </application>

</manifest>